extends base

block content
        main.main
                .login-form
                        h2.heading-secondary.ma-bt-lg Create New account
                        form.signup.form.form--login
                                .form__group
                                        label.form__label(for='name') Your Name
                                        input#name1.form__input(type='text', placeholder='your name', required)
                                .form__group
                                        label.form__label(for='email') Email address
                                        input#email1.form__input(type='email', placeholder='you@example.com', required)
                                .form__group.ma-bt-md
                                        label.form__label(for='password') Password
                                        input#password1.form__input(type='password', placeholder='••••••••', required, minlength='8')
                                .form__group.ma-bt-md
                                        label.form__label(for='passwordConfirm') Password Confirm
                                        input#passwordConfirm1.form__input(type='password', placeholder='••••••••', required, minlength='8')
                                .form__group
                                        button.btn.btn--green Sign Up